    <!-- JavaScript for button functionality, mobile menu, and counter animation -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Mobile menu toggle functionality
            const menuButton = document.getElementById('menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const closeMenuButton = document.getElementById('close-menu');

            menuButton.addEventListener('click', () => {
                mobileMenu.classList.add('active');
            });

            closeMenuButton.addEventListener('click', () => {
                mobileMenu.classList.remove('active');
            });

            // Close mobile menu on link click and handle smooth scrolling
            mobileMenu.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.remove('active');
                });
            });

            // Pricing button functionality
            const pricingButtons = document.querySelectorAll('.pricing-card .btn-primary');
            const messageBox = document.getElementById('message-box');
            const messageText = document.getElementById('message-text');
            const closeButton = document.getElementById('close-button');

            pricingButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const plan = button.getAttribute('data-plan');
                    messageText.textContent = `You have chosen the ${plan} Plan! We'll reach out shortly.`;
                    messageBox.style.display = 'block';
                });
            });

            closeButton.addEventListener('click', () => {
                messageBox.style.display = 'none';
            });

            // Counter animation functionality using IntersectionObserver
            const counterSection = document.getElementById('stats-section');
            let counterAnimationTriggered = false;

            const animateCounter = (element) => {
                const target = parseInt(element.getAttribute('data-target'), 10);
                let current = 0;
                const duration = 2000; // 2 seconds
                const step = target / (duration / 16); // ~60 FPS

                const updateCounter = () => {
                    current += step;
                    if (current < target) {
                        element.textContent = Math.ceil(current);
                        requestAnimationFrame(updateCounter);
                    } else {
                        element.textContent = target;
                        // Add a plus sign to the Processed Jobs number
                        if (element.getAttribute('data-target') === '25000') {
                            element.textContent = '25,000+';
                        }
                    }
                };
                requestAnimationFrame(updateCounter);
            };

            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting && !counterAnimationTriggered) {
                        const counters = entry.target.querySelectorAll('.counter');
                        counters.forEach(counter => animateCounter(counter));
                        counterAnimationTriggered = true;
                        // Stop observing after the animation has been triggered
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.5 // Trigger when 50% of the element is visible
            });

            if (counterSection) {
                observer.observe(counterSection);
            }
        });
    </script>
</body>
</html>
